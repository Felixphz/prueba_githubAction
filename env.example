# ========================================
# CONFIGURACIÓN DEL PROYECTO FULLSTACK
# ========================================

# ========================================
# BACKEND (Flask)
# ========================================
FLASK_ENV=development
SECRET_KEY=your-super-secret-key-change-in-production
# Para desarrollo local usar SQLite (no requiere servidor de BD)
DATABASE_URL=sqlite:///backend/dev.db
# Para producción usar PostgreSQL o MySQL
# DATABASE_URL=postgresql://postgres:password@localhost:5432/fullstack_app
# DATABASE_URL=mysql+pymysql://user:password@localhost:3306/fullstack_app

# ========================================
# FRONTEND (React)
# ========================================
VITE_API_URL=http://localhost:5000

# ========================================
# BASE DE DATOS (PostgreSQL)
# ========================================
POSTGRES_DB=fullstack_app
POSTGRES_USER=postgres
POSTGRES_PASSWORD=password
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# ========================================
# DOCKER
# ========================================
DOCKER_COMPOSE_PROJECT_NAME=fullstack

# ========================================
# LOGGING
# ========================================
LOG_LEVEL=INFO

# ========================================
# SECURITY
# ========================================
# Cambiar en producción
CORS_ORIGINS=http://localhost:3000,http://localhost:80,http://frontend:80
